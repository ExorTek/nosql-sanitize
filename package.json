{
  "name": "nosql-sanitize",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "yarn test:core && yarn test:express && yarn test:fastify",
    "test:core": "yarn workspace @exortek/core-mongo-sanitize test",
    "test:express": "yarn workspace @exortek/express-mongo-sanitize test",
    "test:fastify": "yarn workspace @exortek/fastify-mongo-sanitize test",
    "format": "prettier --write \"packages/**/*.{js,ts,json}\"",
    "publish:fastify": "yarn workspace @exortek/fastify-mongo-sanitize publish",
    "publish:express": "yarn workspace @exortek/express-mongo-sanitize publish"
  },
  "devDependencies": {
    "prettier": "^3.8.1"
  },
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
