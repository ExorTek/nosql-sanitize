{
  "name": "nosql-sanitize",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "yarn workspaces foreach -A --parallel run test",
    "test:core": "yarn workspace @exortek/nosql-sanitize-core run test",
    "test:express": "yarn workspace @exortek/express-mongo-sanitize run test",
    "test:fastify": "yarn workspace @exortek/fastify-mongo-sanitize run test",
    "bench": "node --expose-gc benchmarks/index.js",
    "bench:save": "node --expose-gc benchmarks/index.js --save",
    "bench:compare": "node --expose-gc benchmarks/index.js --save --compare",
    "publish:core": "cd packages/core && npm publish --access public",
    "publish:express": "cd packages/express && npm publish --access public",
    "publish:fastify": "cd packages/fastify && npm publish --access public",
    "publish:all": "yarn publish:core && yarn publish:express && yarn publish:fastify",
    "version:all": "npm version --workspaces --no-git-tag-version",
    "format": "prettier --write \"**/**/*.{js,ts,json}\""
  },
  "devDependencies": {
    "prettier": "^3.8.1"
  },
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
